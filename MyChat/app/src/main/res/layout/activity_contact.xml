<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_addFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/contact_addfriend_selector"
        android:text="@string/addNewFriend"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#CEDCC3"
        android:gravity="center_vertical"
        android:text="@string/myfriend" />

    <ListView
        android:id="@+id/lvFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#d2d2d2"
        android:dividerHeight="1dp"
        android:padding="4dp"></ListView>
</LinearLayout>